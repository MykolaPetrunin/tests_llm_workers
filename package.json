{
  "name": "fly-io-worker",
  "version": "1.0.0",
  "description": "Fly.io Worker for LLM processing",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test:health": "curl http://localhost:3001/health",
    "test:worker": "curl -X POST http://localhost:3001/api/start-filling-topics-with-data -H 'Content-Type: application/json' -d '{\"bookId\": \"test-book-id\"}'",
    "test:worker:real": "curl -X POST http://localhost:3001/api/start-filling-topics-with-data -H 'Content-Type: application/json' -d '{\"bookId\": \"REPLACE_WITH_REAL_BOOK_ID\"}'",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "openai": "^6.5.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@prisma/client": "^6.17.1",
    "@types/node": "^24.8.1",
    "prisma": "^6.17.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "fly.io",
    "worker",
    "llm",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
